<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context=".MainActivity"
    android:statusBarColor="@color/colorPrimaryDark"
    >
    <TextView
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logoText"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/enterField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/textField"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="50sp"
        android:inputType="text"
        android:hint="поиск..."
        android:textColorHint="#FFFFFF"/>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterField"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        style="@style/AppleButtonStyle"
        android:text="Найти" />



    <TextView
        android:id="@+id/resultField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_below="@id/button"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="752dp"
        android:layout_below="@id/resultField"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-395dp"
        android:layout_marginBottom="-425dp"
        android:translationZ="-1dp"
        tools:srcCompat="@drawable/cloudy" />


</RelativeLayout>